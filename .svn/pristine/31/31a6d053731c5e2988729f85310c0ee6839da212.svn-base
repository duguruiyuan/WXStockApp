/**app.wxss**/
.container {
  font-family: "微软雅黑";
  font-size: 14px;
  height: 100%;
  padding: 0;
  margin: 0;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.border{
	border: 1px solid red;
}

.border-green{
	border: 1px solid green;
}

.border-black{
	border: 1px solid black;
}

.flex-wrap{
	display: flex;
}
.flex-item{
	flex: 1;
}
.flex-direction-col{
	flex-direction: column;
}
.flex-direction-row{
	flex-direction: row;
}
.flex_center{
	justify-content: center;
	align-items: center;
}


.img {
    max-width: 100%;
    height: auto;
    display: inline-block;
    vertical-align: middle;
}

.img25{
	border-radius: 50%;
	height: 25px !important;
	width: 25px;
	margin-right: 5px;
	vertical-align: text-bottom;
	justify-content: center;
}
.img45{
	border-radius: 50%;
	height: 45px !important;
	width: 45px;
	margin-right: 5px;
	vertical-align: text-bottom;
	justify-content: center;
}
.img60{
	border-radius: 50%;
	height: 60px !important;
	width: 60px;
	margin-right: 5px;
	vertical-align: text-bottom;
	justify-content: center;
}
.sep-field{
	width: 100%;
	background: #F2F2F2;
	height: 10px;
}

.text-small{
	color: #666;
    font-size: 12px;
	vertical-align: middle;
}

.text-middle{
	color: #666;
    font-size: 14px;
	vertical-align: middle;
}

.text-content {
    color: #333;
    font-size: 0.8rem;
}

.margin-top-middle{
	margin-top: 10px;
}


.wrap-content {
    border-bottom: 1px solid #efefef;
    position: relative;
	margin:5px 5px;
	padding: 5px 5px;
}

.wrap-content .content-top {
	overflow:hidden;
	zoom:1;
	padding:5px 0px;
}

/*两列 + 内容区域*/
.wrap-content  .rightside-2{
	padding:5px 0px;
	margin-left:-5px;
	width:80%;
	float:right;
}

/*三列 + 内容区域*/
.wrap-content .rightside-3{
	padding:5px 0px;
	margin-left: 5px;
	width:60%;
	float:left;
}

.wrap-content .btnSide{
	width: 20%;
	float:right;
}

.twbtn{
    display: block;
    text-align: center;
    margin: 10px 0px;
    color: #2D779A;
    border: 1px #2D779A solid;
    padding: 2%;
    border-radius: 10%;
}

.gzbtn-disable{
	display: block;
    text-align: center;
    margin: 10px 0px;
    color: #ccc;
    border: 1px #ccc solid;
    padding: 2%;
    border-radius: 10%;
}

.red-circle{
	display: inline-block;
	margin-left: 5px;
	margin-bottom: 2px;
	font-size:0.75rem;
	border:solid #f90 1px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	border-radius:5px;
	color:#f90;
	padding:1px 2px;
}

.wrap-header{
	border-bottom: 1px solid #eee;
    padding: 0 .9375rem;
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 1.5rem;
	min-height: 2.75rem;
}

.wrap-header .header-item{
	justify-content: flex-start;
}

.ico{
	margin-right: 5px;
	display: inline-block;
	vertical-align: middle;
}

.ico-16{
	width:16px;
	height:16px;
}
.display-inline-block{
	display: inline-block;
}

.fl{
	float: left;
}
.fr{
	float:right;
}
.clearfix{
	clear:left;
}
.hot-ask-img{
	height: 35px;
	width:200px;
	margin-top:5px;
	margin-left:-5px;
}
.video-img{
	height:150px;
	background-size: cover;
	background-position: center;
	min-height: 10rem;
	color: #f2f2f2;
}
.play-ico{
	height:50%;
	width:50%;
	background-image:url('/resources/images/play_ico.png');
	background-size: cover;
	background-position: center;
	filter:alpha(opacity:70);
	opacity:0.3;
	z-index:1;
}

.title{
  font-size: 1rem;
  border-bottom:1px #ccc solid;
  border-top:1px #ccc solid;
  height:50px;
  text-align:center;
}
.title text{
     line-height:50px;
}
.search{
    border-bottom:1px #ccc solid;
    height:50px;
    margin-top:10px;
}
.search input,button,image{
    height:30px;
}
.search .input{
    background-color: #F8F8F8;
    position: relative;
    top:5px;
    height:30px;
    width:70%;
    margin: 0 10px;
    float:left;
}
.search image{
    width: 30px;
    float: left;
}

.search button{
    font-size: 0.8rem;
    width:20%;
    position: relative;
    top:5px;
    line-height: 30px;
    margin-right: 10px;
}
.no-border-bottom{
	border-bottom: none;
}


